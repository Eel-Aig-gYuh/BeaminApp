<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/img</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#99FFFF</item>
        <item name="colorPrimaryDark">#CCFFFF</item>
        <item name="colorAccent">#66FFFF</item>

        <item name="colorButtonNormal">#DDDDDD</item>
        <item name="colorControlNormal">#EEEEEE</item>
        <item name="colorControlActivated">#CCCCCC</item>
        <item name="colorControlHighlight">#CCFFCC</item>
        <item name="editTextColor">@color/white</item>
        <item name="editTextBackground">@color/black</item>
        <item name="android:textColorHighlight">@android:color/darker_gray</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/img</item>
        <item name="android:windowFullscreen">true</item>


    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>